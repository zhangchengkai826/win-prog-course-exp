<UserControl x:Class="win_prog_course_exp.ChapterContent6"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:win_prog_course_exp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Excel读写操作">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Button Background="Honeydew" Click="OpenExcel">
                            <TextBlock FontSize="14">
                                选择Excel数据文件
                            </TextBlock>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Button Background="Azure" Click="OpenSheet">
                            <TextBlock FontSize="14">
                                打开数据表
                            </TextBlock>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Button Background="Beige" Click="AddNew">
                            <TextBlock FontSize="14">
                                新建
                            </TextBlock>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="2">
                        <Button Background="Cornsilk" Click="Update">
                            <TextBlock FontSize="14">
                                更新
                            </TextBlock>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="3">
                        <Button Background="AntiqueWhite" Click="Delete">
                            <TextBlock FontSize="14">
                                删除
                            </TextBlock>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <DataGrid Name="TableNamePresenter" ItemsSource="{Binding}" />
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3">
                        <DataGrid Name="DataPresenter" />
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
